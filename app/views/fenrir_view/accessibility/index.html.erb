<div class="u-padding--b-50">
  <div class="container-fluid">
    <div class="row u-padding--y-25">
      <div class="col-xs-12">
        <h2 class="u-margin--b-50">Components, from least to most accessible</h2>
        <ol>
          <% @content.sorted_scores.each do |component| %>
            <li><strong><%= component.component.humanize %></strong>: <%= component.overview_score.round(1) %>%</li>
          <% end %>
        </ol>
      </div>
    </div>
  </div>
</div>
