<div class="u-padding--y-50">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <h1 class="o-text--display u-text--bold">Component Library</h1>
        <% @page.top_line_metrics.each do |metric| %>
          <p class="o-text--product"><%= metric %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>

<% @page.components.each do |component| %>
  <div class="u-bg-zebra--silver-50 u-padding--y-50">
    <div class="container">
      <div class="row ">
        <div class="col-xs-12">
          <h1 class="o-text--headline u-text--bold"><%= component.title %></h1>
          <p class="o-text--product <%= component.header_style %>">Status: <%= component.meta_status %></p>
          <p class="o-text--body"><%= component.meta_description %></p>

          <%= link_to 'View all variants', components_path(id: component.name) %>

          <% if component.component_stubs? %>
            <% component.component_stubs.take(1).each do |properties| %>
              <%= system_component('component_example', properties) %>
            <% end %>
          <% else %>
            <div class="w-card u-bg--warning u-padding--25">
              <h2 class="o-text--lead u-text--bold">This component is missing examples.</h2>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
