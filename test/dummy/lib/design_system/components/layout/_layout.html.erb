<div class="c-layout container-fluid">
  <h2><%= @component.title %></h2>

  <% if @component.layout.present? %>
    <div class="row">
      <div class="layout-1 col-xs-12 col-md-6">
        <%= @component.layout.column1 %>
      </div>

      <div class="layout-2 col-xs-12 col-md-6">
        <%= @component.layout.column2 %>
      </div>
    </div>
  <% end %>

  <%= @component.properties[:yield] %>
</div>
